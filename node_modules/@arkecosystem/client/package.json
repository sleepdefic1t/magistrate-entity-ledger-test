{
	"name": "@arkecosystem/client",
	"description": "A simple TypeScript API client for the Ark Blockchain.",
	"version": "1.1.4",
	"contributors": [],
	"license": "MIT",
	"files": [
		"/dist"
	],
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"format": "yarn lint && yarn prettier",
		"lint": "tslint -c tslint.json -p tslint.json 'src/**/*.ts' --fix",
		"prepublishOnly": "yarn build",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "jest",
		"test:watch": "jest --watchAll"
	},
	"jest": {
		"bail": false,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/index.ts",
			"!**/node_modules/**"
		],
		"coverageDirectory": "<rootDir>/.coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"setupFilesAfterEnv": [
			"jest-extended"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"verbose": true
	},
	"dependencies": {
		"is-url-superb": "^3.0.0",
		"ky": "^0.20.0",
		"ky-universal": "^0.7.0"
	},
	"devDependencies": {
		"@types/jest": "^26.0.0",
		"@types/nock": "^11.1.0",
		"@types/prettier": "^2.0.1",
		"@types/rimraf": "^3.0.0",
		"@typeskrift/tsconfig": "^0.1.2",
		"@typeskrift/tslint": "^0.1.5",
		"codecov": "^3.7.0",
		"cross-env": "^7.0.2",
		"jest": "^26.0.1",
		"jest-extended": "^0.11.5",
		"nock": "^12.0.3",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.1.0",
		"tslint": "^6.1.2",
		"typescript": "^3.9.5"
	},
	"engines": {
		"node": ">=10.x"
	}
}
